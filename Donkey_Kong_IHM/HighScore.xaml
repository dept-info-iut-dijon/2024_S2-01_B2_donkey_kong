<Window x:Class="Donkey_Kong_IHM.HighScore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Donkey_Kong_IHM"
        mc:Ignorable="d"
        Title="HighScore" Height="450" Width="800">
    <Grid>
        <!-- pour afficher le score -->
        <TextBlock Text="Score" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,77,0" FontSize="24" Foreground="Black" Width="82"/>
        <TextBlock x:Name="LabelScore" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" FontSize="24"/>
    </Grid>
</Window>
