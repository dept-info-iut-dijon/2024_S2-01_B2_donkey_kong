<Window x:Class="Donkey_Kong_IHM.FenetreJeu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Donkey_Kong_IHM"
        mc:Ignorable="d"
        Title="FenetreJeu" Height="600" Width="800">
    <Grid>
        <Canvas x:Name="canvas" Background="Black" Focusable="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Panel.ZIndex="-3" />
        <Button x:Name="btnParametre" Margin="10,10,650,521" Content="Paramètre" FontSize="20" Click="OuvrirParametre"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,10,10,0">
            <Label x:Name="labelScore"  Content="Score: "  FontSize="20" FontWeight="Bold" Foreground="Yellow" Background="Black" Padding="10,5"/>
            <Label x:Name="labelValeurScore" Content="0" FontSize="20" FontWeight="Bold" Foreground="Cyan" Background="Black" Padding="10,5"/>
            <Label Content=" | " FontSize="20"  Foreground="White"  Background="Black"  Padding="5"/>
            <Label x:Name="labelMeilleurScore"  Content="Record: "   FontSize="20"   FontWeight="Bold" Foreground="Orange" Background="Black" Padding="10,5"/>
            <Label x:Name="labelValeurMeilleurScore"  Content="0"   FontSize="20"    FontWeight="Bold"  Foreground="Gold" Background="Black"  Padding="10,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10">
            <Label x:Name="labelVies" Content="Vies: " FontSize="18"  FontWeight="Bold" Foreground="Red" Background="Black" Padding="10,5"/>
            <Label x:Name="labelValeurVies" Content="3" FontSize="18" FontWeight="Bold" Foreground="LimeGreen" Background="Black" Padding="10,5"/>
        </StackPanel>

    </Grid>
</Window>